{
  "expo": {
    "name": "SHPE NJIT",
    "slug": "shpe-app",
    "scheme": "shpe-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/app-logo-white-transparent.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "bundleIdentifier": "com.shpenjit.officialapp",
      "buildNumber": "14",
      "supportsTablet": false,
      "usesAppleSignIn": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "LSApplicationQueriesSchemes": [
          "instagram",
          "fb",
          "linkedin",
          "discord"
        ],
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for event check-in.",
        "NSCalendarsUsageDescription": "This app needs calendar access to add events to your calendar.",
        "NSCalendarsFullAccessUsageDescription": "This app needs full access to your calendar to check for conflicts and add events.",
        "NSCalendarsWriteOnlyAccessUsageDescription": "This app needs permission to add events to your calendar.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.shpenjit.officialapp",
      "permissions": [
        "CAMERA",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ]
    },
    "notification": {
      "icon": "./assets/app-icon.png",
      "color": "#A9A9A9",
      "androidMode": "default",
      "androidCollapsedTitle": "SHPE Events"
    },
    "web": {
      "favicon": "./assets/app-icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "expo-apple-authentication",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "image": "./assets/app-logo-white-transparent.png",
          "imageWidth": 50
        }
      ],
      [
        "expo-camera",
        {
          "photosPermission": "The app needs to access your photos to let you change your profile picture.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan event QR codes."
        }
      ],
      "@react-native-community/datetimepicker",
      [
        "expo-calendar",
        {
          "calendarPermission": "This app needs calendar access to add events to your calendar."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8e59eebf-ca7c-46de-88a6-f0757b12ba62"
      }
    },
    "owner": "njitwebmaster"
  }
}