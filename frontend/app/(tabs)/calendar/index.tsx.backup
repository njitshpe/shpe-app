import React, { useState, useMemo, useRef } from 'react';
import { View, StyleSheet, SafeAreaView, ScrollView } from 'react-native';
import { startOfWeek, endOfWeek, isWithinInterval, startOfDay, startOfMonth } from 'date-fns';
import { useEvents } from '../../../context/EventsContext';
import { useAdaptiveTheme } from '../../../hooks/calendar/useAdaptiveTheme';
import { CalendarHeaderNew } from '../../../components/calendar/CalendarHeaderNew';
import { WeekStripEnhanced } from '../../../components/calendar/WeekStripEnhanced';
import { MonthGrid } from '../../../components/calendar/MonthGrid';
import { DailyBriefCard } from '../../../components/calendar/DailyBriefCard';
import { WeeklyEventGrid } from '../../../components/calendar/WeeklyEventGrid';

export default function CalendarScreen() {
  const { events } = useEvents();
  const theme = useAdaptiveTheme();
  const [selectedDate, setSelectedDate] = useState(new Date());
  const [isMonthPickerOpen, setIsMonthPickerOpen] = useState(false);
  const scrollViewRef = useRef<ScrollView>(null);

  const handleHeaderPress = () => {
    setIsMonthPickerOpen(!isMonthPickerOpen);
  };

  const handleDateSelect = (date: Date) => {
    setSelectedDate(date);
    setIsMonthPickerOpen(false); // Close month picker on date select
  };

  const handleMonthGridClose = () => {
    setIsMonthPickerOpen(false);
  };

  // Magnetic Today Action: Reset to today and scroll to current week
  const handleTodayPress = () => {
    const today = new Date();
    setSelectedDate(today);
    setIsMonthPickerOpen(false);
    // Scroll to top of the ScrollView
    scrollViewRef.current?.scrollTo({ y: 0, animated: true });
  };

  // Weekly Scope: Get all events for the week containing selected date
  const weekEvents = useMemo(() => {
    const weekStart = startOfWeek(selectedDate, { weekStartsOn: 0 }); // Sunday
    const weekEnd = endOfWeek(selectedDate, { weekStartsOn: 0 });

    return events
      .filter((event) => {
        const eventDate = new Date(event.startTimeISO);
        return isWithinInterval(eventDate, { start: weekStart, end: weekEnd });
      })
      .sort((a, b) => {
        return new Date(a.startTimeISO).getTime() - new Date(b.startTimeISO).getTime();
      });
  }, [events, selectedDate]);

  return (
    <SafeAreaView style={[styles.container, { backgroundColor: theme.background }]}>
      <View style={styles.content}>
        <CalendarHeaderNew
          selectedDate={selectedDate}
          onHeaderPress={handleHeaderPress}
          isMonthPickerOpen={isMonthPickerOpen}
          onTodayPress={handleTodayPress}
        />
        <MonthGrid
          selectedDate={selectedDate}
          events={events}
          onDateSelect={handleDateSelect}
          onClose={handleMonthGridClose}
          visible={isMonthPickerOpen}
        />
        <WeekStripEnhanced
          selectedDate={selectedDate}
          onDateSelect={handleDateSelect}
          events={events}
          scrollViewRef={scrollViewRef}
        />

        <ScrollView
          ref={scrollViewRef}
          style={styles.scrollView}
          contentContainerStyle={styles.scrollContent}
          showsVerticalScrollIndicator={false}
        >
          {/* Daily Brief Card - Shows week status */}
          <DailyBriefCard
            selectedDate={selectedDate}
            weekEvents={weekEvents}
            userName="Friend"
          />

          {/* Weekly Event Grid - Square preview cards */}
          <WeeklyEventGrid events={weekEvents} />
        </ScrollView>
      </View>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
  },
  content: {
    flex: 1,
  },
  scrollView: {
    flex: 1,
  },
  scrollContent: {
    paddingBottom: 40,
  },
});
